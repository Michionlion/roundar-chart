{
    "name": "roundar-chart",
    "description": "A reusable rounded radar chart for the web.",
    "version": "1.0.1",
    "browser": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist/*"
    ],
    "keywords": [
        "svg",
        "radar",
        "chart",
        "dataviz",
        "visualization"
    ],
    "author": "Saejin Heinert <saejinmh@gmail.com>",
    "homepage": "http://michionlion.github.io/roundar-chart/",
    "repository": "https://github.com/michionlion/roundar-chart",
    "bugs": "https://github.com/michionlion/roundar-chart/issues",
    "license": "MIT",
    "dependencies": {
        "d3-shape": "^1.3.7"
    },
    "devDependencies": {
        "@types/d3-shape": "^3.1.1",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "esbuild": "^0.17.12",
        "eslint": "^8.36.0",
        "prettier": "^2.8.4",
        "typescript": "^5.0.2"
    },
    "scripts": {
        "lint": "prettier -cu src/ && eslint 'src/**/*.ts'",
        "fix": "prettier -w src/ && eslint 'src/**/*.ts' --fix",
        "type": "yarn clean && tsc --noEmit && yarn lint",
        "declarations": "tsc --emitDeclarationOnly",
        "package": "esbuild src/index.ts --outdir=dist --sourcemap --minify --bundle --format=esm --target=chrome58,firefox57,safari11,edge16",
        "clean": "rm -rf dist",
        "build": "yarn fix && yarn type && yarn package && yarn declarations"
    }
}
